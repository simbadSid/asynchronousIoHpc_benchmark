#CC    	= g++ #scorep-g++
CC		= x86_64-w64-mingw32-g++ -std=c++11
DIR_AUX	= ../srcBenchmark/auxiliary
CFLAGS 	= -Wall -g -Werror #-lrt -pthread 
EXEC   	=	test_standardWindowsLib.exe

all   	: $(EXEC)





#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Executables ------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
test_standardWindowsLib.exe				: test_standardWindowsLib.o
										$(CC) $(CFLAGS) -o $@ $^


#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Binaries ---------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
%.o				: %.cc
				$(CC) $(CFLAGS) -c -o $@ $^

%.o				: $(DIR_AUX)/%.cc
				$(CC) $(CFLAGS) -c -o $@ $^


#-----------------------------------------------------------------------------------------------------------
#---------------------------------------- General Methodes -------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper

clean:
	rm -f *.o

mrproper: clean
	rm -rf $(EXEC) *.data scorep*
