CC     	= mpic++ #scorep-g++
DIR_AUX	= ../srcBenchmark/auxiliary
CFLAGS 	= -Wall -g -pthread -Werror -lrt -fopenmp
EXEC   	=	test0								\
			testNWrite_Mpi_Naiocb_Nbuffer_Handler


all   	: $(EXEC)





#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Executables ------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
test0									: test0.o
										$(CC) $(CFLAGS) -o $@ $^


testNWrite_Mpi_Naiocb_Nbuffer_Handler	: testNWrite_Mpi_Naiocb_Nbuffer_Handler.o  util.o
										$(CC) $(CFLAGS) -o $@ $^


#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Binaries ---------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
%.o				: %.cc
				$(CC) $(CFLAGS) -c -o $@ $^

%.o				: $(DIR_AUX)/%.cc
				$(CC) $(CFLAGS) -c -o $@ $^


#-----------------------------------------------------------------------------------------------------------
#---------------------------------------- General Methodes -------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper

clean:
	rm -f *.o

mrproper: clean
	rm -rf $(EXEC) pts_aio_write.data scorep*
