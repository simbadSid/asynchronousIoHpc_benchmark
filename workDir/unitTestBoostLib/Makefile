CC			= g++# scorep-g++
BOOST_LIB	= /home/kassuskley/.boost_1_63_0/
DIR_AUX		= ../srcBenchmark/auxiliary
CFLAGS		= -Wall -g -pthread -Werror -lrt
EXEC		= testHelloWorld
all			: $(EXEC)





#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Executables ------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
testHelloWorld	:testHelloWorld.o
				$(CC) -I $(BOOST_LIB) $(CFLAGS) -o $@ $^


#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Binaries ---------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
%.o				: %.cc
				$(CC) -I $(BOOST_LIB) $(CFLAGS) -c -o $@ $^


%.o				: $(DIR_AUX)/%.cc
				$(CC) -I $(BOOST_LIB) $(CFLAGS) -c -o $@ $^


#-----------------------------------------------------------------------------------------------------------
#---------------------------------------- General Methodes -------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper cleanJube

clean:
	rm -f *.o

mrproper: clean
	rm -rf $(EXEC) pts_aio_write.data
